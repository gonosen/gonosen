<p id="notice"><%= notice %></p>

<h2><CENTER>インターンシップ一覧</CENTER></h2>

<table>
  <tbody>
    <% @interns.each do |intern| %>
      <tr>
        <td><%= intern.title %></td>
        <td><%= intern.context %></td>
        <td><%= link_to 'Show', intern %></td>
        <td><%= link_to 'Edit', edit_intern_path(intern) %></td>
        <td><%= link_to 'Destroy', intern, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div>
  <ul class="nav nav-tabs" role="tablist">
    <li class="active" role="presentation">
      <!--%= link_to "A",interns_path, role:"tab" %-->
      <a aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">すべて</a>
    </li>
    <li role="presentation">
      <a aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">短期インターン</a>
    </li>
    <li role="presentation">
