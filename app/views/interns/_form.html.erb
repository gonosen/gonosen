<%= form_for(@intern) do |f| %>
  <% if @intern.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@intern.errors.count, "error") %> prohibited this intern from being saved:</h2>

      <ul>
      <% @intern.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :context %><br>
    <%= f.text_area :context %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :owner %><br>
    <%= f.text_field :owner %>
  </div>
  <div class="field">
    <%= f.label :timeschedule %><br>
    <%= f.text_area :timeschedule %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.text_area :deadline %>
  </div>
  <div class="field">
    <%= f.label :baggage %><br>
    <%= f.text_area :baggage %>
  </div>
  <div class="field">
    <%= f.label :intern_type %><br>
    <%= f.select :intern_type ,{"その他"=>0,"インターン"=>1,"イベント"=>2,"説明会"=>3}%>
  </div>
  <div class="field">
    <%= f.label :intern_span %><br>
    <%= f.select :intern_span ,{"その他"=>0,"短期インターン"=>1,"長期インターン"=>2}%>
  </div>
  <%= image_tag attachment_url(@intern, :company_image, :fill, 300, 300, format: "jpg" ) %>

  <div class="field">
    <%= f.label :company_image %>
    <%= f.attachment_field :company_image %>
    <%= f.check_box :remove_company_image %>
    <%= f.label :remove_company_image %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
