<p id="notice"><%= notice %></p>

<h2><CENTER>インターンシップ一覧</CENTER></h2>
<div class="container">
<div class="row">

<ul class="nav nav-tabs" role="tablist">
    <li class="active" role="presentation">
      <!--%= link_to "A",interns_path, role:"tab" %-->
      <a aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">短期インターン</a>
    </li>
    <li role="presentation">
      <a aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">長期インターン</a>
    </li>
  </ul>
  <p style="height: 20px;"></p>
  <div class="tab-content">
    <div class="tab-pane active" id="tab_a" role="tabpanel">
        <% @interns.where(intern_span: 1).each do |intern|%>
    <div class="col-xs-6 col-md-3">
      <div class="card">

         <div class="card-block">     
                <%=link_to  intern_path(intern) do %>

        <%=image_tag attachment_url(intern, :company_image, :fill, 250, 150, fallback: "default.png", format: "jpg"), :size => "250x150",:class=>"card-img-top",:alt=>"Card image cap" %>  

          <%end%>


          <h4 class="card-title"><%= intern.title%></h4>
        </div>
      </div>
    </div>
  <%end%>
    </div>
    <div class="tab-pane" id="tab_b" role="tabpanel">
  <% @interns.where(intern_span: 2).each do |intern|%>
    <div class="col-xs-6 col-md-3">
      <div class="card">

         <div class="card-block">     
                <%=link_to  intern_path(intern) do %>

        <%=image_tag attachment_url(intern, :company_image, :fill, 250, 150, fallback: "default.png", format: "jpg"), :size => "250x150",:class=>"card-img-top",:alt=>"Card image cap" %>  

          <%end%>


          <h4 class="card-title"><%= intern.title%></h4>
        </div>
      </div>
    </div>
  <%end%>
    </div>
    </div>

</div>
</div>

